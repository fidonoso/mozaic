

<div class="container-fluid">
    <div class="row">
<div class="col-3 mx-auto my-3 p-3 border">
    <!--registro de nuevo supervisor--->
    <h2 class="my-2 text-white">Registrar productos</h2>
    <form class="" action="/createproduct" method="post" enctype="multipart/form-data" >


        <div class="mb-3">
            <input type="text" class="form-control" id="producto" name="producto" placeholder="Nombre" required>
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Descripcion" required>
        </div>
        <div class="mb-3">
            <input type="number" class="form-control" id="precio" name="precio" placeholder="Precio"  required>
        </div>
        <div class="mb-3">
            <input type="file" class="form-control" id="urlImg" name="url_img"  placeholder="Imagen" required>
        </div>
        <div class="mb-3">
            <input type="number" class="form-control" id="stock" name="cantidad" placeholder="stock"  required>
        </div>        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary my-2">Registrar</button>
        </div>
    </form>
</div>

<div class="col-8">
    <h3 class="text-white">Productos</h3>
    <div class="d-flex">

    {{#each productos}}
    <div class="card mx-2 my-2" style="width: 13rem;">
        <img src="img/products/{{this.url_img}}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{this.producto}}</h5>
            <p class="card-text">{{this.descripcion}}</p>
            <form action="/updatestock" method="POST">
            <input type="text" class="d-none" value="{{this.id}}" name="id">
                <div class="d-flex input-group input-group-sm">
                    <span class="card-text my-0">Stock: </span>
                    <input class="form-control mx-1" type="number" value="{{this.stock}}" name="cantidad" required>
                </div>
                <div class="d-flex input-group input-group-sm my-1">
                    <p class="card-text my-0">Precio:</p>
                    <input class="form-control mx-1" type="number" value="{{this.precio}}" name="precio" required >
                </div>                   
                <button type="submit" class="btn btn-primary my-2">Guardar</button>
            </form>
        </div>
    </div>
    {{else}}
    <h2>No hay productos agregados</h2>
    {{/each}}
    </div>
</div>




</div>



</div>
